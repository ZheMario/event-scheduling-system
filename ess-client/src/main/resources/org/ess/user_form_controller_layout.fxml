                  <VBox layoutX="10.0" layoutY="59.0" spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Last Name" />
                        <TextField fx:id="fxLastName" />
                     </children>
                  </VBox>
                  <VBox layoutX="26.0" layoutY="232.0" spacing="10.0">
                     <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Date of Birth" />
